<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <system.net>
    <!--Start email settings-->
    <!--<smtp deliveryMethod="Network">
        <network host="smtp.gmail.com" port="587"
            userName="XXX@gmail.com" password="XXX" enableSsl="true"/>
      </smtp>-->
    <mailSettings>
      <smtp from="XXX@domain.com">
        <network host="mail.domain.com" port="25" userName="XXX@domain.com" password="XXX" defaultCredentials="false" />
      </smtp>
    </mailSettings>
    <!--End email settings-->
  </system.net>
  <log4net>
    <appender name="RollingLogFileAppender" type="log4net.Appender.FileAppender">
      <file value="Logs\\CurrentLog.log" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="2MB" />
      <staticLogFileName value="true" />
      <!--<datePattern value="yyyyMMdd" />-->


      <filter type="log4net.Filter.LevelRangeFilter">
        <acceptOnMatch value="true" />
        <!--<levelMin value="DEBUG" />-->
        <!--<levelMax value="FATAL" />-->
        <!--<levelMax value="ERROR" />-->
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d{dd.MM.yyyy HH:mm:ss} %-5p %m%n" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <!--<level value="DEBUG" />-->
      <!--<level value="INFO" />-->
      <!--<level value="WARN" />-->
      <!--<level value="ERROR" />-->
      <!--<level value="FATAL" />-->
      <appender-ref ref="RollingLogFileAppender"/>
    </root>
  </log4net>
</configuration>